<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/text"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/framebb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:background="@drawable/text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/text"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:alpha="1.0"
                android:background="@drawable/text"
                android:cursorVisible="true"
                android:focusable="false"
                android:gravity="right|center_vertical"
                android:maxLines="3"
                android:textColor="@color/coloreditor"
                android:textSize="50sp"/>


            <EditText
                android:id="@+id/et_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/text"
                android:focusable="false"
                android:gravity="right|center_vertical"
                android:hint=""
                android:singleLine="true"
                android:textColorHint="@color/colorgray"
                android:textSize="25sp"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_tensix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="HEX"
                android:textColor="@color/button_material_light"
                android:textSize="20sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/hexvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/text_tensix"
                android:text="hexvalue"
                android:textColor="@color/colormenu"
                android:textSize="20sp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/text_eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/text_tensix"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:text="OCT"
                android:textColor="@color/button_material_light"
                android:textSize="20sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/octvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/text_tensix"
                android:layout_marginBottom="5dp"                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/text_eight"
                android:text="octvalue"
                android:textColor="@color/colormenu"
                android:textSize="20sp"
                android:visibility="gone"
                />

            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_above="@id/text_eight"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BIN"
                    android:layout_centerVertical="true"
                    android:textColor="@color/button_material_light"
                    android:textSize="20sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/binvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/text_two"
                    android:text="binvalue"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/colormenu"
                    android:textSize="20sp"
                    android:visibility="gone"/>
            </RelativeLayout>

        </RelativeLayout>
    </FrameLayout>


    <Button
        android:id="@+id/bt_choose"
        android:layout_width="45dp"
        android:layout_height="28dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/btselector"
        android:onClick="onClick_extra"
        android:text="选项"
        android:textColor="#292828"
        android:textSize="15sp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/bt_clear"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/white_selector"
                    android:gravity="center"
                    android:text="C"
                    android:textColor="@color/coloreditor"
                    android:textSize="25sp"/>


                <Button
                    android:id="@+id/bt_divide"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/white_selector"
                    android:gravity="center"
                    android:text="/"
                    android:textColor="@color/coloreditor"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/bt_mutiple"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/white_selector"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="@color/coloreditor"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/bt_del"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/white_selector"
                    android:gravity="center"
                    android:text="◀"
                    android:textColor="@color/coloryellow"
                    android:textSize="25sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_7"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/white_selector"
                    android:gravity="center"

                    android:text="7"
                    android:textColor="@color/coloreditor"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/bt_8"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/white_selector"
                    android:gravity="center"

                    android:text="8"
                    android:textColor="@color/coloreditor"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/bt_9"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/white_selector"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@color/coloreditor"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/bt_minus"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/white_selector"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/coloreditor"
                    android:textSize="25sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/bt_4"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/white_selector"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/coloreditor"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/bt_5"

                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/white_selector"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/coloreditor"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/bt_6"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/white_selector"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/coloreditor"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/bt_plus"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/white_selector"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/coloreditor"
                    android:textSize="25sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/bt_1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/white_selector"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/coloreditor"
                            android:textSize="25sp"/>

                        <Button
                            android:id="@+id/bt_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/white_selector"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="@color/coloreditor"
                            android:textSize="25sp"/>

                        <Button
                            android:id="@+id/bt_3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/white_selector"
                            android:gravity="center"
                            android:text="3"
                            android:textColor="@color/coloreditor"
                            android:textSize="25sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/bt_change"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/white_selector"
                            android:gravity="center"
                            android:text="(+/-)"
                            android:textColor="@color/coloreditor"
                            android:textSize="25sp"/>

                        <Button
                            android:id="@+id/bt_0"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/white_selector"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/coloreditor"
                            android:textSize="25sp"/>

                        <Button
                            android:id="@+id/bt_point"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/white_selector"
                            android:gravity="center"
                            android:text="."
                            android:textColor="@color/coloreditor"
                            android:textSize="25sp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/bt_equal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/white_selector"
                        android:gravity="center"
                        android:text="="
                        android:textColor="@color/coloreditor"
                        android:textSize="30sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!--"#dfdad1"-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:id="@+id/music_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menushape"
                android:onClick="onClick_extra"
                android:paddingLeft="10dp"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/text_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="按键音"
                    android:textColor="@color/button_material_light"
                    android:textSize="25sp"/>

                <ToggleButton
                    android:id="@+id/toggleButton"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/text_menu"
                    android:checked="true"
                    android:text="New ToggleButton"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/history_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/music_layout"
                android:layout_below="@id/music_layout"
                android:layout_marginTop="5dp"
                android:background="@drawable/menushape"
                android:onClick="onClick_extra"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:text="历史记录"
                    android:textColor="@color/button_material_light"
                    android:textSize="25sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/binary_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/music_layout"
                android:layout_below="@id/history_layout"
                android:layout_marginTop="5dp"
                android:background="@drawable/menushape"
                android:onClick="onClick_extra"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/textbb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:text="进制转换"
                    android:textColor="@color/button_material_light"
                    android:textSize="25sp"/>
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>